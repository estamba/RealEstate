@model List<Property>


<div class="row">
    @{
        foreach (var property in Model)
        {
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="property-box">
                    <div class="property-thumbnail">
                        <a href="properties-details.html" class="property-img">
                            <div class="tag">Featured</div>
                            <div class="price-box"><span>D @String.Format("{0:0.00}", property.Price)</span></div>
                            <img class="d-block w-100" style="width:350px; height:233px" src="@Url.Action("GetImage","Document", new {ImageId = property.PropertyImages.FirstOrDefault().ImageId })" alt="properties">
                        </a>
                    </div>
                    <div class="detail">
                        <h1 class="title">
                            <a href="properties-grid-rightside.html">@property.Title</a>
                        </h1>
                        <div class="location">
                            <a href="properties-details.html">
                                <i class="flaticon-pin"></i>@property.City.Name,
                            </a>
                        </div>
                        <ul class="facilities-list clearfix">
                            <li>
                                <i class="fa fa-eye"></i>@property.ViewCount views
                            </li>
                            <li>
                                <i class="flaticon-calendar"></i> @DurationHelper.FormatDuration(property.DateCreated)
                            </li>
                            <li>
                                <i class="flaticon-ui"></i> <span>@property.Area M</span><sup>2</sup>

                            </li>
                            <li>
                                <i class="flaticon-rent"></i>@property.Status.Name
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    }


</div>