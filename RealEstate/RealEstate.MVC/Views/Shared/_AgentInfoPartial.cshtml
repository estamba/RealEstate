@model Agent
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="team-1">
    @{
        var imgUrl = (Model.ImageId == null)
            ? "/img/agent-image-placeholder.png"
            : @Url.Action("GetImage","Document", new {ImageId = Model.ImageId});
    }
    <div class="team-photo" style="background-image: url('@imgUrl'); background-position: center; background-size: cover; height: 212px;">
        @{
            var name = Model.ApplicationUser.Name.Split(' ')[0].Trim()?.ToLower();
        }
        <a href="@Url.RouteUrl("agentProperties",new {Id= Model.Id, name= name })">
        </a>
        <ul class="social-list clearfix">
            <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
            <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
            <li><a href="#" class="google"><i class="fa fa-google-plus"></i></a></li>
            <li><a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
        </ul>
    </div>
    <div class="team-details" style="width:auto">

        <h4><a href="@Url.RouteUrl("agentProperties",new {Id= Model.Id, name= name })">@Model.ApplicationUser.Name</a></h4>
        @{
            if (Model.City != null)
            {
                <h6 class="fa fa-location-arrow"> @Model.City.Name</h6>

            }
        }
        <h6 class="flaticon-calendar"> Joined @DurationHelper.FormatDuration(DateTime.Now.AddDays(-10))</h6>
        <h6><a href="tel:@Model.ApplicationUser.PhoneNumber" class="fa fa-phone-square"> @Model.ApplicationUser.PhoneNumber</a></h6>
        <h6><a href="mailto: @Model.ApplicationUser.Email" class="flaticon-mail"> @Model.ApplicationUser.Email </a></h6>

    </div>
</div>