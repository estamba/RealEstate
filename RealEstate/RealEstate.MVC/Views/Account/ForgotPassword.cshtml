@model ForgotPasswordVM
@{
    ViewData["Title"] = "PasswordRecovery";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!-- Form content box start -->
        <div class="form-content-box">
            <!-- details -->
            <div class="details">
                <!-- Logo -->
                <a href="@Url.Action("Index","Home")">
                    <img src="~/img/black-logo.png" class="cm-logo" alt="black-logo">
                </a>
                <!-- Name -->
                <h3>Recover your password</h3>
                <!-- Form start -->
                <form method="post"  asp-controller="Account" asp-action="PasswordRecovery">
                    <div class="form-group">

                        <input type="text" class="input-text" placeholder="Email Address" asp-for="EmailAddress" name="EmailAddress">
                        <span asp-validation-for="EmailAddress" class="text-dark"></span>
                    </div>
                    <div class="form-group mb-0">
                        <button type="submit" class="btn-md button-theme btn-block">Send Me Email</button>
                    </div>
                </form>
                <!-- Social List -->
              
            </div>
            <!-- Footer -->
            <div class="footer">
                <span>Already a member? <a href="login.html">Login here</a></span>
            </div>
        </div>
        <!-- Form content box end -->
    </div>
</div>

