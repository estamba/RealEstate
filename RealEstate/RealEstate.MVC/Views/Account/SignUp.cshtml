@model SignUpVm
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!-- Form content box start -->
        <div class="form-content-box">
            <!-- details -->
            <div class="details">
                <!-- Logo-->
                <a href="@Url.Action("Index","Home")">
                    <img src="~/img/logos/logo.jpeg" width="100" height="100" alt="black-logo">
                </a>
                <!-- Name -->
                <h3>Create an account</h3>
                <!-- Form start-->
                <form asp-action="SignUp" asp-controller="Account" method="post">
                    <div class="form-group">
                        <input type="text" name="name" class="input-text" placeholder="Full Name" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <input type="email" name="emailAddress" class="input-text" placeholder="Email Address" asp-for="EmailAddress">
                    </div>
                    <div class="form-group">
                        <input type="text" name="phoneNumber" class="input-text" placeholder="phone number" asp-for="PhoneNumber">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="input-text" placeholder="Password" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirmPassword" class="input-text" placeholder="Confirm Password" asp-for="ConfirmPassword">
                    </div>
                    <div class="form-group mb-0">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <button type="submit" class="btn-md button-theme btn-block">Signup</button>
                    </div>
                </form>
                <!-- Social List -->
                <ul class="social-list clearfix">
                    <li><a a asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" asp-route-provider="Facebook" class="facebook-bg"><i class="fa fa-facebook"></i></a></li>
                    <li><a a asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" asp-route-provider="Google" class="google-bg"><i class="fa fa-google-plus"></i></a></li>
                </ul>
            </div>
            <!-- Footer -->
            <div class="footer">
                <span>Already a member? <a href="@Url.Action("Login","Account")">Login here</a></span>
            </div>
        </div>
        <!-- Form content box end -->
    </div>
</div>

